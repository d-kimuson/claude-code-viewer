{
  "extends": "./node_modules/@claude-code-viewer/tsconfig/configs/base.json",
  "compilerOptions": {
    // transpile target
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    // module
    "isolatedModules": true,
    // build optimization
    "incremental": true,
    // paths alias
    "paths": {
      "@/*": ["./src/*"]
    },
    // typecheck
    "types": ["vitest/globals"]
  },
  "include": ["src"]
}
