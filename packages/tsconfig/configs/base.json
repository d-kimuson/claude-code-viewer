{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    // transpile
    "noEmit": true,
    // module resolution
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    // typecheck
    "jsx": "preserve",
    "exactOptionalPropertyTypes": false
  }
}
