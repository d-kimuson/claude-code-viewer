{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "plugins": {
    "release-it-pnpm": {
      "inFile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "after:bump": "pnpm build && claude -p /prepare-release"
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "skipChecks": false
  }
}
