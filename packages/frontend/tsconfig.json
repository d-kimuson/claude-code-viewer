{
  "extends": "./node_modules/@claude-code-viewer/tsconfig/configs/base.json",
  "compilerOptions": {
    // transpile target
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "noEmit": true,
    // module
    "isolatedModules": true,
    // build optimization
    "incremental": true,
    // paths alias
    "paths": {
      "@/*": ["./src/*"]
    },
    // typecheck
    "types": ["vitest/globals", "vite/client"]
  },
  "include": ["src"]
}
