{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Code Viewer",
  "version": "0.6.0-beta.2",
  "identifier": "dev.claude-code-viewer.app",
  "build": {
    "beforeDevCommand": "pnpm dev:desktop",
    "devUrl": "http://localhost:3400",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/static"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": []
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": ["../dist", "../node_modules"]
  }
}
