{
  "name": "@kimuson/claude-code-viewer",
  "version": "0.6.0",
  "description": "A full-featured web-based Claude Code client that provides complete interactive functionality for managing Claude Code projects.",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-kimuson/claude-code-viewer.git"
  },
  "homepage": "https://github.com/d-kimuson/claude-code-viewer",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "bin": {
    "claude-code-viewer": "./dist/main.js"
  },
  "scripts": {
    "dev": "run-p 'dev:*'",
    "dev:frontend": "vite",
    "dev:backend": "CCV_ENV=development tsx watch --env-file-if-exists=.env.local src/server/main.ts",
    "start": "node dist/main.js",
    "build": "./scripts/build.sh",
    "build:frontend": "vite build",
    "build:backend": "esbuild src/server/main.ts --format=esm --bundle --packages=external --sourcemap --platform=node --outfile=dist/main.js",
    "lint": "run-s 'lint:*'",
    "lint:biome-format": "biome format .",
    "lint:biome-lint": "biome check .",
    "fix": "run-s 'fix:*'",
    "fix:biome-format": "biome format --write .",
    "fix:biome-lint": "biome check --write --unsafe .",
    "typecheck": "tsgo --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "e2e": "./scripts/e2e/exec_e2e.sh",
    "e2e:start-server": "./scripts/e2e/start_server.sh",
    "e2e:capture-snapshots": "./scripts/e2e/capture_snapshots.sh",
    "lingui:extract": "lingui extract --clean && node ./scripts/lingui-sort.js",
    "lingui:compile": "lingui compile --typescript",
    "prepack": "pnpm build",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "0.2.63",
    "@anthropic-ai/claude-code": "2.1.63",
    "@anthropic-ai/sdk": "0.78.0",
    "@effect/cluster": "0.56.4",
    "@effect/experimental": "0.58.0",
    "@effect/platform": "0.94.5",
    "@effect/platform-node": "0.104.1",
    "@effect/rpc": "0.73.2",
    "@effect/sql": "0.49.0",
    "@effect/workflow": "0.16.0",
    "@hono/node-server": "1.19.9",
    "@hono/zod-validator": "0.7.6",
    "@hookform/resolvers": "5.2.2",
    "@lingui/core": "5.9.2",
    "@lingui/react": "5.9.2",
    "@radix-ui/react-avatar": "1.1.11",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-collapsible": "1.1.12",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-hover-card": "1.1.15",
    "@radix-ui/react-popover": "1.1.15",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-tabs": "1.1.13",
    "@radix-ui/react-tooltip": "1.2.8",
    "@replit/ruspty": "3.6.0",
    "@tailwindcss/vite": "4.2.1",
    "@tanstack/react-devtools": "0.9.6",
    "@tanstack/react-query": "5.90.21",
    "@tanstack/react-router": "1.163.3",
    "@tanstack/react-router-devtools": "1.163.3",
    "@xterm/addon-fit": "0.11.0",
    "@xterm/xterm": "6.0.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "commander": "14.0.3",
    "date-fns": "4.1.0",
    "effect": "3.19.19",
    "es-toolkit": "1.44.0",
    "hono": "4.12.3",
    "jotai": "2.18.0",
    "lucide-react": "0.575.0",
    "minisearch": "7.2.0",
    "parse-git-diff": "0.0.20",
    "prexit": "2.3.0",
    "radix-ui": "1.4.3",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-error-boundary": "6.1.1",
    "react-hook-form": "7.71.2",
    "react-markdown": "10.1.0",
    "react-syntax-highlighter": "16.1.1",
    "remark-gfm": "4.0.1",
    "sonner": "2.0.7",
    "tailwind-merge": "3.5.0",
    "ulid": "3.0.2",
    "ws": "8.19.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@effect/language-service": "0.77.0",
    "@lingui/cli": "5.9.2",
    "@lingui/conf": "5.9.2",
    "@lingui/format-json": "5.9.2",
    "@lingui/loader": "5.9.2",
    "@lingui/vite-plugin": "5.9.2",
    "@tailwindcss/postcss": "4.2.1",
    "@tanstack/router-plugin": "1.163.3",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "25.3.3",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@types/react-syntax-highlighter": "15.5.13",
    "@types/ws": "8.18.1",
    "@typescript/native-preview": "7.0.0-dev.20260228.1",
    "@vitejs/plugin-react-swc": "4.2.3",
    "dotenv": "17.3.1",
    "esbuild": "0.27.3",
    "lefthook": "2.1.1",
    "npm-run-all2": "8.0.4",
    "playwright": "1.58.2",
    "release-it": "19.2.4",
    "release-it-pnpm": "4.6.6",
    "tailwindcss": "4.2.1",
    "tsx": "4.21.0",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "packageManager": "pnpm@10.30.3+sha512.c961d1e0a2d8e354ecaa5166b822516668b7f44cb5bd95122d590dd81922f606f5473b6d23ec4a5be05e7fcd18e8488d47d978bbe981872f1145d06e9a740017"
}
