{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/*.generated.*",
      "!.next",
      "!**/*.css",
      "!dist",
      "!playwright.config.ts",
      "!packages/frontend/src/lib/$path.ts",
      "!packages/frontend/src/lib/i18n/locales/*/messages.ts",
      "!packages/frontend/src/routeTree.gen.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noProcessEnv": "error"
      },
      "correctness": {
        "useUniqueElementIds": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "overrides": [
    {
      "includes": ["e2e/**"],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": ["**/*.config.ts"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
